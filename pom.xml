  <profiles>
    <!--
        architecture-specific definitions used to choose ZeroMQ native jar file
    -->
    <profile>
      <id>Linux</id>
      <activation>
        <property>
          <name>os.name</name>
          <value>Linux</value>
        </property>
      </activation>
      <properties>
        <native.arch>${os.arch}</native.arch>
        <native.os>${os.name}</native.os>
      </properties>
    </profile>
    <profile>
      <id>Windows</id>
      <activation>
        <os>
          <family>windows</family>
        </os>
      </activation>
      <properties>
        <native.arch>${os.arch}</native.arch>
        <native.os>Windows</native.os>
      </properties>
    </profile>
    <profile>
      <id>Mac</id>
      <activation>
        <os>
          <family>mac</family>
        </os>
      </activation>
      <properties>
        <native.arch>${os.arch}</native.arch>
        <native.os>Darwin</native.os>
      </properties>
    </profile>
  </profiles>

